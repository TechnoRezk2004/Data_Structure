//factorial recursion
#include <iostream>
using namespace std;
double fact (double n);
int main()
{
    int n;
    cout<<"enter num: ";
    cin>>n;
    double facto;
    facto = fact(n);
    cout <<"fact. is: "<<facto;
}
double fact (double n)
{
    if (n==1)
    {
        return 1;
    }

    else
    {
        return n*fact(n-1);

    }
}
